@model List<CategoryListViewModel>


<div>
	<div class="float-start">  <h2>Kategoriler</h2>   </div>
	<div class="float-end">
		<a asp-controller="Category" asp-action="New" class="btn btn-warning"> Yeni Kategori </a>
	</div>
</div>


<div style="padding-top:75px">

	<table class="table">
		<thead>
			<tr>
				<th>Kategori Adı</th>
				<th>Açıklaması</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Description</td>
					<td>
						<a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary fw-bold">Düzenle</a>


						<a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger fw-bold btnDelete">Sil</a>
					</td>
				</tr>
			}


		</tbody>


	</table>

</div>

@section Scripts {

	<script>
		if (@(string.IsNullOrWhiteSpace(TempData["CategoryErrorMessage"]?.ToString()) ? "false" : "true"))
			{
				Swal.fire({

					icon: "error",
					title: "Hata",
					text: @Html.Raw(Json.Serialize(TempData["CategoryErrorMessage"]))
				});

			}


	</script>



}